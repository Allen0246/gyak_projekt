#darabolás
szoveg= 'Darabolás!' #minden 2. karaktert ír ki a 6. karakterig
print(szoveg[1:6:2])
print(szoveg[-1:-4:-1])

#tükör ??

szöveg= 'indul a görög aludni'
szöveg=szöveg.replace(' ', '')
mirror =szöveg[::-1]

print(szöveg)

if szöveg==mirror:
    print('palindrom')
else:
    print('nem jó!')


#lista reverse
lista = [1,2,3,4,5]
print(lista)

print(lista[::-1]) #visszafelé lista

lista.reverse() #visszafelé lista
print(lista)


